<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidCovid19CaloriesTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/baloo</item>
    </style>

    <style name="addfood_label_carbs">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/blueMacro</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="addfood_tv_nutrient">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="addfood_tv_nutrient_precent">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="addfood_label_proteins">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/greenMacro</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>
    <style name="addfood_label_fats">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:textColor">@color/orangeMacro</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

</resources>